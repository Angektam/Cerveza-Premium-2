# Configuración de la Base de Datos
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=tu_password_mysql_aqui
DB_NAME=cerveza_premium
DB_PORT=3306

# Configuración del Servidor
PORT=4000
NODE_ENV=development

# Configuración de Seguridad
JWT_SECRET=genera_un_secreto_super_seguro_aleatorio_minimo_32_caracteres
JWT_EXPIRE=24h
BCRYPT_ROUNDS=12

# Configuración de CORS
CORS_ORIGIN=http://localhost:4200

# Configuración de Upload
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Email - Configuración
# Opción 1: SendGrid (recomendado para producción)
SENDGRID_API_KEY=tu_api_key_de_sendgrid_aqui
EMAIL_FROM=noreply@cervezapremium.com

# Opción 2: SMTP (Gmail u otro servidor SMTP)
# Para Gmail, necesitas crear una "Contraseña de aplicación" en tu cuenta de Google
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_contraseña_de_aplicacion

# URLs
FRONTEND_URL=http://localhost:4200
BACKEND_URL=http://localhost:4000
